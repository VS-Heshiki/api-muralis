{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "ES2021",
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "experimentalDecorators": true,
        "useUnknownInCatchVariables": false,
        "strict": true,
        "paths": {
            "@/*": [
                "*"
            ]
        }
    },
    "include": [
        "src"
    ]
}